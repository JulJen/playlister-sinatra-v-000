<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Artists by Genre:</h1>

<ol>
<% @genre.artist.each do |artist| %>
    <li><a href="/genres/<%= artist.slug %>"><%= artist.name %> </a></li>
<% end %>
</ol>


<h3>Songs by Genre: </h3>

<ol>
<% @artist.songs.each do |song| %>
    <li><a href="/songs/<%= song.slug %>"><%= song.name %> </a></li>
<% end %>
</ol>
