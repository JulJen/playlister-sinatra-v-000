<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song: <%= @song.name %></h1>

<h3>By Artist:</h3>

<% @song.each do |artist| %>
  <p><a href="/artist/<%= artist.slug %>"><%= artist.name %> </a></p>
<% end %>

<h3>Genre: </h3>

<% @song.genres.each do |genre| %>
  <p><a href="/genres/<%= genre.slug %>"><%= genre.name %> </a></p>
<% end %>
