<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song: <%= @song.name %></h1>

<h3>By Artist:</h3>
<ol><a href="/artist/<%= @song.artist.slug %>"><%= @song.artist.name %> </a></ol>


<h3>Genre: </h3>

<% @song.genres.each do |genre| %>
  <p><a href="/genres/<%= genre.slug %>"><%= genre.name %> </a></p>
<% end %>
